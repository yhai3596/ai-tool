}

/* Star Rating Styles */
.star-rating {
  color: #FFD700;
  font-size: 16px;
  font-weight: bold;
}

.star-rating .star-filled {
  color: #FFD700;
}

.star-rating .star-half {
  color: #FFD700;
}

.star-rating .star-empty {
  color: #E5E7EB;
}

/* New Tools Section */
