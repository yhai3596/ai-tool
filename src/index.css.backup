/* Performance Optimizations */
.tool-card img {
  transition: transform 0.2s ease;
}

/* Premium Enhanced Accessibility Features - WCAG AAA Compliance */
/* Enhanced Focus States for Maximum Accessibility */
.visit-button:focus,
button:focus,
select:focus,
input:focus,
a:focus {
  outline: 3px solid var(--primary-purple) !important;
  outline-offset: 2px;
  box-shadow: 0 0 0 6px rgba(107, 70, 193, 0.2) !important;
  border-color: var(--primary-purple) !important;
}

/* High contrast focus for dark mode */
:root[data-theme="dark"] .visit-button:focus,
:root[data-theme="dark"] button:focus,
:root[data-theme="dark"] select:focus,
:root[data-theme="dark"] input:focus,
:root[data-theme="dark"] a:focus {
  outline-color: var(--accent-teal-primary) !important;
  box-shadow: 0 0 0 6px rgba(0, 191, 165, 0.3) !important;
}

/* High contrast mode enhanced focus */
:root[data-contrast="high"] .visit-button:focus,
:root[data-contrast="high"] button:focus,
:root[data-contrast="high"] select:focus,
:root[data-contrast="high"] input:focus,
:root[data-contrast="high"] a:focus {
  outline: 4px solid #FFFFFF !important;
  outline-offset: 3px;
  box-shadow: 0 0 0 8px rgba(255, 255, 255, 0.5) !important;
}

/* Screen reader friendly content */
.sr-only {
  position: absolute !important;
  width: 1px !important;
  height: 1px !important;
  padding: 0 !important;
  margin: -1px !important;
  overflow: hidden !important;
  clip: rect(0, 0, 0, 0) !important;
  white-space: nowrap !important;
  border: 0 !important;
}

.sr-only:focus {
  position: static !important;
  width: auto !important;
  height: auto !important;
  padding: inherit !important;
  margin: inherit !important;
  overflow: visible !important;
  clip: auto !important;
  white-space: normal !important;
}

/* Enhanced Skip to main content link */
.skip-link {
  position: absolute;
  top: -60px;
  left: 6px;
  background: var(--gradient-primary);
  color: var(--text-white);
  padding: 12px 16px;
  text-decoration: none;
  border-radius: 6px;
  z-index: 1000;
  font-family: 'DM Sans', system-ui, sans-serif;
  font-weight: 500;
  transition: all 0.3s ease;
}

.skip-link:focus {
  top: 6px;
  outline: 3px solid var(--accent-teal-primary);
  outline-offset: 2px;
}

/* Voice Search & Advanced UI Elements */
.voice-search-btn {
  position: relative;
  background: var(--gradient-accent);
  border: none;
  border-radius: 50%;
  width: 48px;
  height: 48px;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  color: white;
}

.voice-search-btn:hover {
  transform: scale(1.1);
  box-shadow: 0 8px 25px rgba(0, 191, 165, 0.4);
}

.voice-search-btn.listening {
  animation: pulse 1.5s infinite;
}

.pulse-animation {
  position: absolute;
  top: -4px;
  left: -4px;
  right: -4px;
  bottom: -4px;
  border: 2px solid var(--accent-teal-primary);
  border-radius: 50%;
  animation: pulse-ring 1.5s infinite;
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

@keyframes pulse-ring {
  0% { transform: scale(1); opacity: 1; }
  100% { transform: scale(1.4); opacity: 0; }
}

/* Real-time Notification Banner */
.notification-banner {
  background: var(--gradient-metallic);
  color: white;
  padding: 8px 16px;
  text-align: center;
  font-size: 14px;
  font-weight: 500;
  position: relative;
  overflow: hidden;
  border-radius: 8px;
  margin-bottom: 16px;
  font-family: 'DM Sans', system-ui, sans-serif;
}

.notification-item {
  animation: slideInRight 0.5s ease-out;
}

@keyframes slideInRight {
  from { transform: translateX(100%); opacity: 0; }
  to { transform: translateX(0); opacity: 1; }
}

/* Advanced Filter System */
.advanced-filters {
  background: var(--bg-secondary);
  border-radius: 12px;
  padding: 24px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  margin-bottom: 24px;
}

.filter-group {
  margin-bottom: 20px;
}

.filter-group label {
  display: block;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 8px;
  font-family: 'Space Grotesk', system-ui, sans-serif;
  font-size: 14px;
}

.multi-select {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
}

.checkbox-label {
  display: flex;
  align-items: center;
  gap: 6px;
  padding: 6px 12px;
  background: var(--bg-primary);
  border: 2px solid #E5E7EB;
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 14px;
  font-family: 'DM Sans', system-ui, sans-serif;
}

.checkbox-label:hover {
  border-color: var(--primary-purple);
  background: var(--primary-purple-light);
}

.checkbox-label input[type="checkbox"] {
  margin: 0;
  accent-color: var(--primary-purple);
}

.filter-chip {
  padding: 8px 16px;
  background: var(--bg-primary);
  border: 2px solid #E5E7EB;
  border-radius: 20px;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 14px;
  font-weight: 500;
  font-family: 'DM Sans', system-ui, sans-serif;
}

.filter-chip.active {
  background: var(--gradient-primary);
  color: white;
  border-color: var(--primary-purple);
}

.filter-chip:hover {
  border-color: var(--primary-purple);
  transform: translateY(-1px);
}

/* Enhanced Card System */
.recommendations-section {
  background: var(--bg-secondary);
  border-radius: 16px;
  padding: 24px;
  margin-bottom: 32px;
  box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
}

.recommendations-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 16px;
  margin-top: 16px;
}

/* Enhanced MiniMax Credit */
.minimax-credit {
  position: fixed;
  bottom: 10px;
  right: 10px;
  font-size: 10px;
  color: var(--text-muted);
  opacity: 0.6;
  font-family: 'JetBrains Mono', monospace;
  z-index: 1;
  pointer-events: none;
  background: var(--bg-primary);
  padding: 4px 8px;
  border-radius: 4px;
  border: 1px solid var(--text-muted);
  transition: opacity 0.3s ease;
}

.minimax-credit:hover {
  opacity: 0.8;
}

/* Premium Performance Optimizations & Smooth Scrolling */
html {
  scroll-behavior: smooth;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* Enhanced tool card performance */
